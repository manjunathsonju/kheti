				<option value="pkr">Pokhara</option>
			</select>
		</div>
			
		<div class="panel-left__bottom clearfix text-center">
			{% if soconfig.get_settings('barcompare_status') %}
			<div class="col-xs-6">
				<i class="fa fa-check-square-o" aria-hidden="true"></i>
				<div class="bot-inner">
					<a href="{{compare}}">{{text_compare}}</a>
				</div>
			</div>
			{% endif %}

			{% if soconfig.get_settings('barwistlist_status') %}
			<div class="col-xs-6">
				<i class="fa fa-heart" aria-hidden="true"></i>
				<div class="bot-inner">
					<a href="{{wishlist}}">{{text_wishlist}}</a>
				</div>
			</div>
			{% endif %}

			{% if soconfig.get_settings('barlanguage_status')  %}
			<div class="col-xs-6 panel-left__language">
				{{ language }}
				<h4>{{text_language}}</h4>
			</div>
			{% endif %}

			{% if soconfig.get_settings('barcurenty_status')  %}
			<div class="col-xs-6 panel-left__language">
				{{ currency }}
				<h4>{{text_currency}}</h4>
			</div>
			{% endif %}			
		</div>
	</div>
</div>


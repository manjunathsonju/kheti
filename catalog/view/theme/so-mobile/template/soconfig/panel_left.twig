<div id="panel-menu" class="side-menu panel panel-left">
	<div class="content">
		<div class="panel-left__top clearfix text-center">
			<div class="panel-logo">
				{{soconfig.get_logo()}}
			</div>
			{% if soconfig.get_settings('barsearch_status') %}
				<div class="panel-search">
					{{ search }}
				</div>
			{% endif %}
			
			{% if logged %}
			<div>						
				<div class="dropdown">
				  <button class="btn btn-block dropdown-toggle" type="button" data-toggle="dropdown" style="color: #FFF; background: #2f8630;">{{ customer_first_name }}
